---
interface Feature {
  title: string;
  description: string;
}

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<div class="space-y-4 md:space-y-6">
    {
        features.map(({ title, description }) => (
            <div>
                <div class="flex items-start space-x-2 md:space-x-3 mb-2">
                    <svg
                        class="w-4 h-4 md:w-5 md:h-5 text-emerald-400 mt-0.5 md:mt-1 flex-shrink-0"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 13l4 4L19 7"
                        />
                    </svg>
                    <h3 class="text-lg md:text-xl font-semibold">{title}</h3>
                </div>
                <p class="text-sm md:text-base text-gray-400 pl-6 md:pl-8" set:html={description} />
            </div>
        ))
    }
</div>